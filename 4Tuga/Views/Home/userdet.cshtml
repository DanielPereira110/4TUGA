@using _4Tuga.Models
@using System.Data.Entity
@model _4Tuga.Models.ApplicationUser

@{

    ViewBag.Title = "Detalhes";
}


<h2>@ViewBag.Title</h2>

@Html.AntiForgeryToken()

    <h4>Detalhes do utilizador</h4>
    <hr />
<div class="container jumbotron">
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class="blog-stripe">
                @if (Model.Files.Any(f => f.FileType == FileType.Avatar))
                {
                    <div>
                        <img width="300" height="200" src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Avatar).FileId" alt="avatar" />
                    </div>
                }
                else
                {

                    <div>
                        <img width="300" height="200" src="~/images/62182.jpg" alt="avatar" />
                    </div>
                }

                @*@using (Html.BeginForm("userdet", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="file" id="Avatar" name="upload" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Mudar Avatar" />
                        </div>
                    </div>
                }*@

               
            </div>
        </div>
        <div class="col-md-6 col-lg-6">
            <ul class="all-blogs">
                <li>
                    @Html.LabelFor(model => model.Email, "Email: ") 
                    @Html.DisplayFor(model => model.Email)
                </li>
                <li>
                    @Html.LabelFor(model => model.Email, "Nome: ") 
                    @Html.DisplayFor(model => model.Name)
                </li>
                <li>
                    @Html.LabelFor(model => model.Email, "Sexo: ") 
                    @Html.DisplayFor(model => model.Gender)
                </li>
                <li>
                    @Html.LabelFor(model => model.Email, "Data de Nascimento: ") 
                    @Html.DisplayFor(model => model.DateofBirth)
                </li>
            </ul>
            @Html.ActionLink("Mudar Password", "Manage", "Account", routeValues: null, htmlAttributes: new { id = "Manage" })
            @Html.ActionLink("Editar Conta", "userEdit", "Home", routeValues: null, htmlAttributes: new { id = "Manage" })
        </div>
    </div>
</div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
