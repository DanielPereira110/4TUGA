<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>4TUGA</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("4TUGA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Roles", "Index", "Role")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> 
                            Desporto
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Desporto", "About", "Home")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Andebol", "About", "Home")</li>
                            <li>@Html.ActionLink("Futebol", "About", "Home")</li>
                            <li>@Html.ActionLink("Futsal", "About", "Home")</li>
                            <li>@Html.ActionLink("Ténis", "About", "Home")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Categorias", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Posts", "Index", "Posts")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 4TUGA</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
